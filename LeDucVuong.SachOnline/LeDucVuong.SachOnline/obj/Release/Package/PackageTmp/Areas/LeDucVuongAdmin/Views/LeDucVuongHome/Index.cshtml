@{
    Layout = "~/Areas/LeDucVuongAdmin/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Admin";
}


<h2 style="text-align:center; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
    QUẢN TRỊ SÁCH ONLINE
</h2>

<script>
    $(function() {
        toastr.options = {
            "closeButton": true,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "timeOut": "5000"
        };

        @if (ViewBag.ThongBao != null)
        {
            if ((bool)ViewBag.IsSuccess)
            {
                <text>toastr.success('@ViewBag.ThongBao');</text>
            }
            else
            {
                <text>toastr.error('@ViewBag.ThongBao');</text>
            }
        }
    });
</script>